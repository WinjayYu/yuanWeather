/**index.wxss**/

.wrap {
  color: #fff;
}

.current-day {
  padding:20rpx 50rpx;
  background-color: skyblue;
}

.current-day .cityName {
  margin-top: 20rpx;
}

.current-day .current-day-top {
  text-align: center;
}

.current-day .temperature {
  font-size: 120rpx;
  font-family: 'sans-serif-thin';
  margin-top: 65rpx;
}

.current-day .weather-icon {
  width: 200rpx;
  height: 200rpx;
}

.current-day .air-group {
  display: flex;
  align-items: center;
  justify-content:center;
  margin-bottom: 20rpx;
}

.current-day .weather-text {
  margin-bottom:35rpx;
}

.current-day .menu {
 width:50rpx;
  height:50rpx;
  position:absolute;
  right:20rpx;
}

.wind-group {
  margin-top: 300rpx;
  display: flex;
  flex-direction: row;
}

.wind-item {
  flex: 1;
  border-right: 1px #eee solid;
  text-align: center;
}

.wind-item:last-child {
  border-right: none;
}

.forecast {
  color: #000;
  padding: 10rpx 30rpx;
  font-size:30rpx;
}

.forecast .forecast-item {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  height: 150rpx;
  align-items: center;
  border-bottom: 1px #eee solid
}

.forecast .forecast-item .weather-detail image {
  width: 75rpx;
  height: 75rpx;
  margin-right: 20rpx;
}

.forecast .forecast-item .weather-detail {
  display: flex;
  align-items: center;
}

.forecast .forecast-item .weather-detail-group {
  display: flex;
}

.forecast .detail-first::after {
    content: "|";
    display: inline-block;
    margin: 0 20rpx;
}

.forecast .weather-detail-text {
  margin-bottom: 10rpx;
}